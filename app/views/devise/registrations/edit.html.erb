<div class="max-w-md mx-auto p-6 bg-white rounded shadow-md mt-8">
    <h2 class="text-2xl font-bold text-purple-700 text-center">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-8" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4">
            <%= f.label :email, class: "block text-purple-700 text-sm font-bold mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="field mb-4">
                <div class="text-purple-700 text-sm font-bold mb-2">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            </div>
        <% end %>

        <div class="field mb-4">
            <%= f.label :password, class: "block text-purple-700 text-sm font-bold mb-2" %>
            <i class="text-sm text-purple-500">(leave blank if you don't want to change it)</i>
            <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
            <% if @minimum_password_length %>
                <br />
                <em class="text-sm text-purple-500"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
        </div>

        <div class="field mb-4">
            <%= f.label :password_confirmation, class: "block text-purple-700 text-sm font-bold mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="field mb-4">
            <%= f.label :current_password, class: "block text-purple-700 text-sm font-bold mb-2" %>
            <i class="text-sm text-purple-500">(we need your current password to confirm your changes)</i>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="actions mb-4">
            <%= f.submit "Update", class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" %>
        </div>
    <% end %>

    <h3 class="text-xl font-bold text-purple-700">Cancel my account</h3>

    <div class="text-purple-500 mb-4">
        Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-purple-600 text-white font-bold py-2 px-4 rounded hover:bg-purple-700" %>
    </div>

    <%= link_to "Back", :back, class: "text-purple-700 hover:text-purple-800 font-bold" %>
</div>
