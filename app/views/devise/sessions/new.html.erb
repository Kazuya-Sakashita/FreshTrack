<div class="max-w-md mx-auto p-6 bg-white rounded shadow-md mt-8">
    <h2 class="text-2xl font-bold text-purple-700 text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8" }) do |f| %>
        <div class="field mb-4">
            <%= f.label :email, class: "block text-purple-700 text-sm font-bold mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="field mb-4">
            <%= f.label :password, class: "block text-purple-700 text-sm font-bold mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <% if devise_mapping.rememberable? %>
            <div class="field mb-4 flex items-center">
                <%= f.check_box :remember_me, class: "mr-2" %>
                <%= f.label :remember_me, class: "text-purple-700 text-sm font-bold" %>
            </div>
        <% end %>

        <div class="actions">
            <%= f.submit "Log in", class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" %>
        </div>
    <% end %>
</div>

<div class="mt-4 max-w-md mx-auto">
    <%= render "devise/shared/links" %>
</div>
