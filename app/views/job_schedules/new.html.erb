<h1 class="text-2xl font-bold text-purple-700 text-center">ジョブスケジュールの作成</h1>

<%= form_with(model: @job_schedule, url: job_schedule_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :cron, '通知スケジュール (cron形式)' %>
    <%= form.text_field :cron, placeholder: '例: 0 7 * * * (毎朝7時)', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="actions mt-4">
    <%= form.submit '保存', class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>

<%= link_to '戻る', root_path, class: "mt-4 inline-block text-purple-600 hover:text-purple-800 font-bold" %>
