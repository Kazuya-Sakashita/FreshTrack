<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-purple-700 text-center">通知スケジュールの編集</h1>

    <%= form_with(model: @job_schedule, local: true) do |form| %>
      <div class="mb-6">
        <%= form.label :cron, '通知スケジュール (cron形式)',
          class: "block text-gray-700 font-medium mb-2" %>
        <%= form.text_field :cron, value: @job_schedule.cron,
          placeholder: '例: 18 7 * * * (毎日7時18分)',
          class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-purple-500" %>
      </div>

      <div class="actions">
        <%= form.submit '更新',
          class: "submit-button w-full bg-purple-600 text-white font-bold py-2 px-4 rounded hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to '戻る', root_path,
        class: "text-purple-600 hover:text-purple-800 font-bold" %>
    </div>
  </div>
</div>

<style>
  .submit-button {
    background-color: #6b46c1 !important; /* Tailwindのbg-purple-600の色 */
    transition: background-color 0.3s ease-in-out;
  }

  .submit-button:hover {
    background-color: #553c9a !important; /* Tailwindのbg-purple-700の色 */
  }

  .submit-button:disabled {
    background-color: #d1d5db !important; /* 無効時の色 (gray-300) */
    cursor: not-allowed;
  }
</style>
