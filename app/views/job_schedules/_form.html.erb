<%= form_with(model: @job_schedule, url: job_schedule_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :cron, '通知スケジュール (cron形式)' %>
    <%= form.text_field :cron, placeholder: '例: 0 7 * * *', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="actions">
    <%= form.submit '保存' %>
  </div>
<% end %>
