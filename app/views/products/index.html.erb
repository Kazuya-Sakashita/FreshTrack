<h1>Products</h1>
<h2><%= @soon_expiring_count %> products are expiring within 7 days</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Purchase Date</th>
      <th>Expiration Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
        <tr class="<%= 'expiration-soon' if (product.expiration_date - Date.today).to_i < 7 %>">
        <td><%= product.name %></td>
        <td><%= product.purchase_date %></td>
        <td><%= product.expiration_date %></td>
        <td><%= product.days_until_expiration %>æ—¥</td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

